              "raw": "{{baseUrl}}/api/gold-purchase/transaction/TXN_ID_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["api", "gold-purchase", "transaction", "TXN_ID_HERE"]
            }
          }
        }
      ]
