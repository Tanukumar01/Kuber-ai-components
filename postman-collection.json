              "raw": "{{baseUrl}}/api/gold-purchase/transactions?userEmail={{userEmail}}&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "gold-purchase", "transactions"],
              "query": [
                {
                  "key": "userEmail",
                  "value": "{{userEmail}}"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Specific Transaction",
          "request": {
            "method": "GET",
            "header": [],
