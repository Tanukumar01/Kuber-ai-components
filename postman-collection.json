        {
          "name": "Analyze Gold Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What is the current gold price and should I invest in digital gold?\",\n  \"userEmail\": \"{{userEmail}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/gold-question/analyze",
              "host": ["{{baseUrl}}"],
              "path": ["api", "gold-question", "analyze"]
            }
          }
        },
        {
          "name": "Get Gold Price",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/gold-question/price",
              "host": ["{{baseUrl}}"],
              "path": ["api", "gold-question", "price"]
            }
          }
        },
        {
          "name": "Calculate Gold Cost",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"goldAmount\": 10.5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/gold-question/calculate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "gold-question", "calculate"]
            }
          }
        },
        {
          "name": "Get Gold Price History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/gold-question/history?days=30",
              "host": ["{{baseUrl}}"],
              "path": ["api", "gold-question", "history"],
              "query": [
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          }
        },
        {
          "name": "Get Question Logs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/gold-question/logs?userEmail={{userEmail}}&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "gold-question", "logs"],
              "query": [
                {
                  "key": "userEmail",
                  "value": "{{userEmail}}"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
