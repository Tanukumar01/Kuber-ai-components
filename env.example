# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/gold_investment_db

# OpenRouter Configuration (for LLM question detection)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Currency / Pricing
# Default currency for gold pricing (INR or USD). Defaults to INR if unset.
DEFAULT_CURRENCY=INR
# USD to INR exchange rate used for conversion when returning INR prices
EXCHANGE_RATE_USD_INR=83

# Optional: Live gold price settings
# GOLD_PRICE_PROVIDER can be: goldapi | metalsapi | metalpriceapi (leave empty to use simulated)
GOLD_PRICE_PROVIDER=
GOLDAPI_KEY=
METALS_API_KEY=
# Manual override per-gram USD price (if set, used on boot)
GOLD_PRICE_PER_GRAM_USD=
METALPRICE_API_KEY=

# Optional markup to approximate Indian retail price (import duty, GST, making, etc.)
# This percentage is added to the international spot price for 'retail' basis
PRICE_MARKUP_PERCENT=12

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Gold Price API (optional - for real-time prices)
GOLD_PRICE_API_KEY=your_gold_price_api_key_here
